<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llAvailDvcRow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_65sdp"
            android:background="@drawable/rounded_shadow_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_20sdp">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:src="@drawable/circuit_simple_icon" />

            <LinearLayout
                android:id="@+id/llDvcNamAddRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDvcName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="WTR MG 05"
                    android:textSize="@dimen/_17sdp" />

                <TextView
                    android:id="@+id/tvDvcMacAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="04:56:04:D4:B7:E7"

                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

        </LinearLayout>


</LinearLayout>