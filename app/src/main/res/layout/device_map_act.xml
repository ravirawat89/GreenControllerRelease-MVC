<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:orientation="vertical"
    tools:context="com.netcommlabs.greencontroller.activities.DeviceMapAct">

    <LinearLayout
        android:id="@+id/llScrnHeader"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="Device Connected"
            android:textSize="@dimen/header_title_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDeviceAndValveNo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/tvValveCountTopLeft"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/circle_cyan"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:id="@+id/tvDvcsOneEvent"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/round_back_shadow_small"
            android:gravity="center"
            android:text="Device 1"
            android:textSize="@dimen/_15sdp" />

    </LinearLayout>

</LinearLayout>
