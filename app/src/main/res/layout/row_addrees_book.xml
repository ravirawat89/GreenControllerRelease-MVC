<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llRowComplete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_135sdp"
        android:background="@drawable/rect_shadow_all_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:gravity="center"
            android:paddingStart="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:background="@drawable/circle_wo_shadow_light"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivAddressTypeIcon"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/tvAddressTypeNameAD"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:gravity="center"
                    android:maxLength="8"
                    android:paddingEnd="@dimen/_2sdp"
                    android:paddingStart="@dimen/_2sdp"
                    android:text="Home" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".7"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAddressName"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_8sdp"
                android:text="new ashok nagar ,Noida sector 3,uttar pradesh"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDeviceNumber"
                    android:layout_width="@dimen/_86sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/divice_icon"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_15sdp"
                    android:text="4 Device "
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tvValveNumber"
                    android:layout_width="@dimen/_86sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/divice_icon"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_15sdp"
                    android:text="14 Valves "
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

