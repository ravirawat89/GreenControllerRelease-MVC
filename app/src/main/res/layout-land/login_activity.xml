<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.netcommlabs.greencontroller.activities.LoginAct">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_38sdp"
        android:layout_marginTop="@dimen/_38sdp"
        android:layout_weight="3"
        android:background="@drawable/tree_icon" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etPhoneEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/rect_shadow_all_bg"
                android:hint="Enter phone or email"

                android:imeOptions="flagNoExtractUi"
                android:paddingLeft="@dimen/_15sdp"
                android:singleLine="true"
                android:textSize="@dimen/_13sdp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_55sdp"
                android:background="@drawable/rect_shadow_all_bg"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:imeOptions="flagNoExtractUi"
                android:paddingLeft="@dimen/_15sdp"
                android:singleLine="true"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/tvForgtPassEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingBottom="@dimen/_7sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_2sdp"
                android:text="Forgot password?"
                android:textSize="@dimen/_13sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLoginEvent"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/round_back_shadow_small"
                    android:gravity="center"
                    android:text="LOGIN"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvSignUpEvent"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/round_back_shadow_small"
                    android:gravity="center"
                    android:text="SIGN UP"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>




        </LinearLayout>

    </ScrollView>

</LinearLayout>