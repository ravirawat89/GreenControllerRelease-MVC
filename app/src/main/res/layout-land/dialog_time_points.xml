<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.netcommlabs.greencontroller.activities.DialogActivity">
<LinearLayout
    android:layout_width="@dimen/_300sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/llHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Points"
            android:textSize="@dimen/_18sdp" />
    </LinearLayout>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/llHeaderTitle"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="#408473" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewLine"
        android:layout_marginBottom="@dimen/_45sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivArrowUp"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:src="@drawable/top_arrow" />

        <EditText
            android:id="@+id/etInputTimePoint"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/rect_border_dark"
            android:cursorVisible="false"
            android:focusable="false"
            android:gravity="center"
            android:text="00:00"
            android:textSize="@dimen/_25sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivArrowDown"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:paddingTop="@dimen/_12sdp"
            android:src="@drawable/bottom_arrow" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDoneDialog"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/rounded_shadow_background_light"
            android:gravity="center"
            android:text="DONE"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/tvCancelDialog"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_45sdp"
            android:background="@drawable/rounded_shadow_background_light"
            android:gravity="center"
            android:text="CANCEL"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>
</LinearLayout>
</RelativeLayout>
